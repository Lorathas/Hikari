<!DOCTYPE html>
<html>
<head>
	<%- include('../partials/head'); %>
</head>
<body>
	<header>
		<%- include ('../partials/header'); %>
	</header>
	<main>
		<% thread.posts.forEach(post => { %>
		 <div id="<%= post.id %>" class="post">
			<div class="header">
				
			</div>
			<div class="body">
				<%= post.text %>
			</div>
		 </div>
		<% }) %>
	</main>
	<footer>
		<%- include ('../partials/footer'); %>
	</footer>
</body>
</html>